<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul style="margin: 10px 0;">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 20px;">
    <%= form.label :title, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
    <%= form.text_field :title, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px;" %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :body, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
    <%= form.text_area :body, rows: 10, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px;" %>
  </div>

  <div>
    <%= form.submit style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;" %>
    <%= link_to "Cancel", posts_path, style: "margin-left: 10px; color: #6c757d; text-decoration: none;" %>
  </div>
<% end %>
